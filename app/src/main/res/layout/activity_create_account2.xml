<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_account">

    <TextView
        android:id="@+id/skapakonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="33dp"
        android:text="@string/create_account"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/Hundensnamn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="text"
        android:id="@+id/namn"
        android:layout_width="414dp"
        android:layout_height="61dp"
        android:layout_below="@id/skapakonto"
        android:layout_marginTop="29dp"
        android:background="@color/white"
        android:hint="@string/your_name"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skapakonto" />

    <EditText
        android:inputType="text"
        android:id="@+id/Hundensnamn"
        android:layout_width="414dp"
        android:layout_height="61dp"
        android:layout_below="@id/namn"
        android:background="@color/white"
        android:hint="@string/your_dog_s_name"
        android:singleLine="false"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="94dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namn" />




    <EditText
        android:inputType="number"
        android:id="@+id/Ã…lder"
        android:layout_width="414dp"
        android:layout_height="61dp"
        android:layout_below="@id/Hundensnamn"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="29dp"
        android:background="@color/white"
        android:hint="@string/your_dog_s_age"
        android:singleLine="false"
        app:layout_constraintBottom_toTopOf="@+id/namn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skapakonto" />

</androidx.constraintlayout.widget.ConstraintLayout>